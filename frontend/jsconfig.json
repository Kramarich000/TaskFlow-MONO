{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@errors/*": ["pages/errors/*"],
      "@hooks/*": ["hooks/*"],
      "@metadata/*": ["metadata/*"],
      "@validators/*": ["validators/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@data/*": ["data/*"],
      "@store/*": ["store/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["src/**/*", "src/metrics", "public/disableErrors.js"]
}
